= form_for @product, html: { class: "form form-horizontal product" } do |f|
  .form-group
    = f.label :name, class: 'control-label col-lg-2'
    .col-lg-10
      = f.text_field :name, class: 'form-control', required: true
    = f.error_span(:name)
  .form-group
    = f.label :price, class: 'control-label col-lg-2'
    .col-lg-10
      = f.text_field :price, class: 'form-control', required: true
    = f.error_span(:price)
  .form-group
    = f.label :description, class: 'control-label col-lg-2'
    .col-lg-10
      = f.text_field :description, class: 'form-control', required: true
    = f.error_span(:description)
  .form-group
    = f.label :brand, class: 'control-label col-lg-2'
    .col-lg-10
      = f.text_field :brand, class: 'form-control', required: false
    = f.error_span(:brand)
  .form-group
    = f.label :discount, class: 'control-label col-lg-2'
    .col-lg-10
      = f.text_field :discount, class: 'form-control', required: false
    = f.error_span(:discount)
  .form-group
    = f.label :stock_count, class: 'control-label col-lg-2'
    .col-lg-10
      = f.text_field :stock_count, class: 'form-control', required: true
    = f.error_span(:stock_count)
  .form-group
    = f.label :img_url, class: 'control-label col-lg-2'
    .col-lg-10
      = f.text_field :img_url, class: 'form-control', required: true
    = f.error_span(:img_url)
  .form-group
    = f.label :categories, class: 'control-label col-lg-2'
    .component
      / Multiple Checkboxes (inline)
      .col-md-10
        %label.checkbox-inline{for: "checkboxes-0"}
        - @categories.each do |cat|
          %input{id: (cat.id), name: "checkboxes[]", type: "checkbox", value: (cat.id)}/
          = cat.name
  .form-group
    .col-lg-offset-2.col-lg-10
      = f.submit nil,class: 'btn btn-primary'
      = link_to t('.cancel', :default => t("helpers.links.cancel")), products_path, :class => 'btn btn-default'

